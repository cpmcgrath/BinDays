<UserControl x:Class="CMcG.BinDays.Business.LiveTiles.Standard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             FontFamily="{StaticResource PhoneFontFamilyNormal}"
             FontSize="{StaticResource PhoneFontSizeNormal}"
             Foreground="{StaticResource PhoneForegroundBrush}"
             Height="336" Width="336">
    <Grid x:Name="LayoutRoot" Background="#FF77C043">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Name="General" Text="" FontFamily="Segoe UI Symbol" FontSize="140" Margin="-20,0" />
            <TextBlock Name="Recycling" Text="" FontFamily="Segoe UI Symbol" FontSize="140" Margin="-20,0"/>
        </StackPanel>
        <TextBlock Grid.Row="1"
                   Name ="lblActualDay"
                   Text="WEDNESDAY" HorizontalAlignment="Center" FontFamily="Segoe WP Light" FontSize="48" />
    </Grid>
</UserControl>